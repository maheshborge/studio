
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // User Profile Rules
    match /users/{userId}/profile/{docId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }
    
    // Allow collectionGroup queries for 'profile' (Admin & Dashboard)
    match /{path=**}/profile/{docId} {
      allow read: if isSignedIn();
    }

    // Crop Cycles Rules
    match /users/{userId}/cropCycles/{cropId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }
    
    // Allow collectionGroup queries for 'cropCycles' (Marketplace & Dashboard)
    match /{path=**}/cropCycles/{cropId} {
      allow read: if isSignedIn();
    }

    // Questions / Community Content
    match /questions/{questionId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Allow collectionGroup queries for 'questions' if needed
    match /{path=**}/questions/{questionId} {
      allow read: if true;
    }

    match /communityContent/{id} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /personalInfos/{id} { allow read: if isSignedIn(); }
    match /locations/{id} { allow read: if true; }
  }
}
