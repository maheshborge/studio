
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Rules for User Profiles (Direct Path)
    match /users/{userId}/profile/{profileDoc} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }
    
    // Explicit rule for Collection Group queries on 'profile'
    // Required for marketplace lookups and admin dashboard
    match /{path=**}/profile/{profileDoc} {
      allow read, list: if isSignedIn();
    }

    // Rules for Crop Cycles (Direct Path)
    match /users/{userId}/cropCycles/{cropId} {
      allow read: if isSignedIn();
      // Allow owner to write, and allow others to update (for partial buying quantity updates)
      allow write: if isOwner(userId) || (isSignedIn() && request.method == 'update');
    }
    
    // Explicit rule for Collection Group queries on 'cropCycles'
    // Required for marketplace and dashboard analytics
    match /{path=**}/cropCycles/{cropId} {
      allow read, list: if isSignedIn();
    }

    // Rules for Transactions
    match /transactions/{txnId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // Rules for Community Questions
    match /questions/{questionId} {
      allow read, list: if true;
      allow write: if isSignedIn();
    }

    // Rules for Community Content (Articles/Videos)
    match /communityContent/{id} {
      allow read: if true;
      allow write: if isSignedIn();
    }
  }
}
