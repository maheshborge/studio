
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function for Auth
    function isSignedIn() {
      return request.auth != null;
    }

    // Rule for Admin access (Master access)
    // We check the profile doc for userType == 'admin'
    function isAdmin() {
      return isSignedIn() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)/profile/main).data.userType == 'admin';
    }

    // 1. GLOBAL ADMIN RULE: Admins can do everything
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // 2. PUBLIC/USER RULES
    // Allow reading of any document for logged in users to avoid UI crashes
    match /{document=**} {
      allow read, list: if isSignedIn();
    }

    // 3. COLLECTION GROUPS: Explicitly allow listing for critical data
    match /{path=**}/profile/{profileDoc} {
      allow read, list: if isSignedIn();
    }
    
    match /{path=**}/cropCycles/{cropId} {
      allow read, list: if isSignedIn();
    }

    // 4. OWNERSHIP RULES: Users can edit their own profile/crops
    match /users/{userId}/{allSubPaths=**} {
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // 5. TRANSACTIONS: Allow creation/read for marketplace flow
    match /transactions/{txnId} {
      allow read, list, write: if isSignedIn();
    }

    // 6. PUBLIC CONTENT
    match /questions/{questionId} {
      allow read, list: if true;
      allow write: if isSignedIn();
    }
    
    match /communityContent/{contentId} {
      allow read, list: if true;
    }
  }
}
