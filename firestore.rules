
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    // Global rule for authenticated users
    // This allows all authenticated users to read and list documents across the database.
    // This is necessary for collectionGroup queries used in marketplace, dashboard, and admin views.
    match /{allPaths=**} {
      allow read, list: if isSignedIn();
      allow write: if isSignedIn();
    }

    // Specific public access for community content (if needed without login)
    match /questions/{questionId} {
      allow read, list: if true;
    }
    
    match /communityContent/{contentId} {
      allow read, list: if true;
    }

    // Transactions should be secure but readable by participants
    match /transactions/{txnId} {
      allow read, write: if isSignedIn();
    }
  }
}
