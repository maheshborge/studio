
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // User Profile Rules
    match /users/{userId}/profile/{docId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }
    
    // Explicitly allow collectionGroup queries for 'profile' (for Dashboard)
    match /{path=**}/profile/{docId} {
      allow read: if isSignedIn();
    }

    // Farmer Data Rules
    match /users/{userId}/farmers/{farmerId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }
    match /{path=**}/farmers/{farmerId} {
      allow read: if isSignedIn();
    }

    // Buyer Data Rules
    match /users/{userId}/buyers/{buyerId} {
      allow read, write: if isOwner(userId);
    }

    // Crop Cycles Rules (Marketplace & Dashboard)
    match /users/{userId}/cropCycles/{cropId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }
    
    // Explicitly allow collectionGroup queries for 'cropCycles' (for Marketplace)
    match /{path=**}/cropCycles/{cropId} {
      allow read: if isSignedIn();
    }

    // Lookup collections
    match /personalInfos/{id} { allow read: if isSignedIn(); }
    match /locations/{id} { allow read: if true; }
  }
}
