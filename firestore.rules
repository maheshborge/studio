
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId}/profile/{docId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }
    
    match /{path=**}/profile/{docId} {
      allow read: if isSignedIn();
    }

    match /users/{userId}/cropCycles/{cropId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId) || (isSignedIn() && request.method == 'update');
    }
    
    match /{path=**}/cropCycles/{cropId} {
      allow read: if isSignedIn();
    }

    match /transactions/{txnId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /questions/{questionId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /communityContent/{id} {
      allow read: if true;
      allow write: if isSignedIn();
    }
  }
}
