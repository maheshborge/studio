
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Main user profile rules
    match /users/{userId}/profile/{docId} {
      allow read, write: if isOwner(userId);
    }

    // Farmer data rules
    match /users/{userId}/farmers/{farmerId} {
      allow read, write: if isOwner(userId);
    }

    // Crop Cycles
    match /users/{userId}/cropCycles/{cropId} {
      allow read, write: if isOwner(userId);
    }

    // Public marketplace (only buyers can see all listings, others see their own)
    match /{path=**}/cropCycles/{cropId} {
      allow read: if isSignedIn();
    }

    // Lookup collections
    match /personalInfos/{id} { allow read: if isSignedIn(); }
    match /locations/{id} { allow read: if true; }
  }
}
