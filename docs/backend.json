
{
  "entities": {
    "UserProfile": {
      "title": "UserProfile",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "mobile": { "type": "string" },
        "userType": { "type": "string", "enum": ["farmer", "buyer", "admin"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "name", "mobile", "userType"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}/profile/main": { "schema": "UserProfile" }
  }
}
