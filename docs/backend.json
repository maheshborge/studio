
{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Stores core user profile information including their role in the system.",
      "properties": {
        "id": {
          "type": "string",
          "description": "The unique Firebase UID."
        },
        "name": {
          "type": "string",
          "description": "Full name of the user."
        },
        "mobile": {
          "type": "string",
          "description": "10-digit mobile number."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Optional email address."
        },
        "userType": {
          "type": "string",
          "enum": [
            "farmer",
            "buyer",
            "supplier",
            "transporter",
            "consultant",
            "expert"
          ],
          "description": "The primary role of the user in the system."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "name",
        "mobile",
        "userType"
      ]
    },
    "Farmer": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Farmer",
      "type": "object",
      "description": "Represents a farmer and their associated information.",
      "properties": {
        "id": {
          "type": "string"
        },
        "personalInfoId": {
          "type": "string"
        }
      }
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}/profile/main",
        "definition": {
          "entityName": "UserProfile",
          "schema": {
            "$ref": "#/backend/entities/UserProfile"
          },
          "description": "Main user profile and role definition."
        }
      },
      {
        "path": "/users/{userId}/farmers/{farmerId}",
        "definition": {
          "entityName": "Farmer",
          "schema": {
            "$ref": "#/backend/entities/Farmer"
          },
          "description": "Stores farmer profiles, owned by the user."
        }
      }
    ]
  }
}
