
{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Stores core user profile information including their role in the system.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "mobile": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "userType": {
          "type": "string",
          "enum": ["farmer", "buyer", "supplier", "transporter", "consultant", "expert"]
        },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "name", "mobile", "userType"]
    },
    "CropCycle": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "CropCycle",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "farmerId": { "type": "string" },
        "name": { "type": "string" },
        "category": { "type": "string", "enum": ["fruits", "vegetables", "grains", "spices", "flowers"] },
        "startDate": { "type": "string", "format": "date" },
        "expectedHarvestDate": { "type": "string", "format": "date" },
        "area": { "type": "number" },
        "estimatedYield": { "type": "number" },
        "status": { "type": "string", "enum": ["growing", "ready", "harvested"] }
      }
    },
    "Question": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Question",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "text": { "type": "string" },
        "category": { "type": "string" },
        "askCount": { "type": "number" },
        "lastAskedAt": { "type": "string", "format": "date-time" }
      }
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}/profile/main",
        "definition": {
          "entityName": "UserProfile",
          "schema": { "$ref": "#/backend/entities/UserProfile" },
          "description": "Main user profile."
        }
      },
      {
        "path": "/users/{userId}/cropCycles/{cropId}",
        "definition": {
          "entityName": "CropCycle",
          "schema": { "$ref": "#/backend/entities/CropCycle" },
          "description": "Individual crop cycles for a farmer."
        }
      },
      {
        "path": "/questions/{questionId}",
        "definition": {
          "entityName": "Question",
          "schema": { "$ref": "#/backend/entities/Question" },
          "description": "Global questions repository for Experts."
        }
      }
    ]
  }
}
