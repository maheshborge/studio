
{
  "entities": {
    "UserProfile": {
      "title": "UserProfile",
      "type": "object",
      "description": "Stores core user profile information.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "mobile": { "type": "string" },
        "email": { "type": "string" },
        "userType": { "type": "string", "enum": ["farmer", "buyer", "supplier", "transporter", "consultant", "expert"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "name", "mobile", "userType"]
    },
    "TransporterProfile": {
      "title": "TransporterProfile",
      "type": "object",
      "description": "Logistics and vehicle details for transporters.",
      "properties": {
        "vehicles": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "number": { "type": "string", "description": "Vehicle Number (e.g., MH-12-AB-1234)" },
              "driverMobile": { "type": "string" },
              "type": { "type": "string", "description": "Type of vehicle (e.g., Pickup, Truck)" }
            }
          }
        },
        "updatedAt": { "type": "string", "format": "date-time" }
      }
    },
    "CropCycle": {
      "title": "CropCycle",
      "type": "object",
      "description": "Detailed crop record with sales status.",
      "properties": {
        "id": { "type": "string" },
        "farmerId": { "type": "string" },
        "name": { "type": "string" },
        "variety": { "type": "string" },
        "category": { "type": "string" },
        "status": { "type": "string", "enum": ["growing", "ready", "sold"] },
        "isReadyForSale": { "type": "boolean", "default": false },
        "saleHarvestDate": { "type": "string" },
        "saleEstimatedQuantity": { "type": "number" },
        "remainingQuantity": { "type": "number" },
        "salePhotoUrl": { "type": "string" },
        "farmerDistrict": { "type": "string" },
        "farmerName": { "type": "string" },
        "farmerMobile": { "type": "string" }
      }
    },
    "SaleTransaction": {
      "title": "SaleTransaction",
      "type": "object",
      "description": "Records individual purchases by buyers.",
      "properties": {
        "id": { "type": "string" },
        "cropId": { "type": "string" },
        "buyerId": { "type": "string" },
        "buyerName": { "type": "string" },
        "quantityBought": { "type": "number" },
        "rate": { "type": "number" },
        "totalAmount": { "type": "number" },
        "packingType": { "type": "string", "enum": ["bag", "sack", "crate", "carton", "loose", "other"] },
        "packingCount": { "type": "number" },
        "packingWeight": { "type": "number" },
        "transporterMobile": { "type": "string" },
        "vehicleNumber": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      }
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}/profile/main": { "schema": "UserProfile", "description": "Main profile." },
    "/users/{userId}/profile/transporterData": { "schema": "TransporterProfile", "description": "Vehicles." },
    "/users/{userId}/cropCycles/{cropId}": { "schema": "CropCycle", "description": "Crop records." },
    "/transactions/{txnId}": { "schema": "SaleTransaction", "description": "Sale records." }
  }
}
